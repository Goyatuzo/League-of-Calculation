extends partials/layout

block content
    #container
        - var champName = youName
        #you.championInformation
            img.championThumbnail(src= youThumbnail)
            include partials/champion-info

        - champName = enemyName
        #enemy.championInformation
            img.championThumbnail(src= enemyThumbnail)
            include partials/champion-info

        include partials/scripts

        // Need this in this file or else the syntax won't make any sense.
        script.
            //noinspection JSUnusedAssignment
            var youData = !{JSON.stringify(youData)}
            //noinspection JSUnusedAssignment
            var enemyData = !{JSON.stringify(enemyData)}

        script(src='/js/calculate-stats.js')